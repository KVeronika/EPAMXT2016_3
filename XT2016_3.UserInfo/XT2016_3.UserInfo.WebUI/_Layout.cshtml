<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/layoutStyle1.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            User<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Pages/Users/Add">Add</a></li>
                            <li><a href="~/Pages/Users/Delete">Delete</a></li>
                            <li><a href="~/Pages/Users/Edit">Edit</a></li>
                            <li><a href="~/Pages/Users/ShowAll">Show all</a></li>
                            <li><a href="~/Pages/Users/AddAwardToUser">Add award</a></li>
                            <li><a href="~/Pages/Users/DeleteAwardFromUser">Delete award</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Award<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Pages/Awards/Add">Add</a></li>
                            <li><a href="~/Pages/Awards/Delete">Delete</a></li>
                            <li><a href="~/Pages/Awards/Edit">Edit</a></li>
                            <li><a href="~/Pages/Awards/ShowAll">Show all</a></li>
                        </ul>
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Accounts<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Pages/Accounts/SetAccountsAsAdmins">Set as admins</a></li>
                                <li><a href="~/Pages/Accounts/SetAccountsAsUsers">Disrank from admins</a></li>
                            </ul>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="auth-block"><a href="~/Logout">Logout @User.Identity.Name</a></li>
                    }
                    else
                    {
                        <li class="auth-block"><a href="~/Registration">Registration</a></li>
                        <li><a href="~/Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>